<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Weather Widget</title>
  <style>
    .weather-widget {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      width: 250px;
      height: 300px;
      background-color: #b1e1d9;
      border-radius: 15px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      padding: 20px;
      text-align: center;
      font-family: 'Arial', sans-serif;
      color: #ffffff;
    }

    #weather-icon {
      font-size: 60px;
      margin-bottom: 15px;
    }

    #weather-data h2 {
      margin: 0;
      font-size: 20px;
      color: #ffffff;
    }

    #temperature {
      font-size: 36px;
      font-weight: bold;
      color: #ffffff;
    }

    #description {
      font-size: 16px;
      color: #ffffff;
    }

    #local-time {
      font-size: 16px;
      color: #ffffff;
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <div class="weather-widget">
    <div id="weather-icon"></div>
    <div id="weather-data">
      <h2>Lucknow, India</h2>
      <div id="temperature"></div>
      <div id="description"></div>
      <div id="local-time"></div>
    </div>
  </div>

  <script>
    const apiKey = '132f245b3a247f0eb4ffa0ee298dee13'; // Your OpenWeather API key
    const city = 'Lucknow';
    const country = 'IN';

    async function getWeather() {
      try {
        const response = await fetch(`https://api.openweathermap.org/data/2.5/weather?q=${city},${country}&appid=${apiKey}&units=metric`);
        if (!response.ok) {
          throw new Error('Network response was not ok');
        }
        const data = await response.json();
        console.log(data); // Log data for debugging
        updateWidget(data);
        updateTime();
      } catch (error) {
        console.error('Fetch error: ', error);
        document.getElementById('weather-data').innerHTML = '<p>Weather data not available</p>';
      }
    }

    function updateWidget(data) {
      const temp = data.main.temp;
      const desc = data.weather[0].description;
      const iconCode = data.weather[0].icon;
      const iconUrl = getIconUrl(iconCode);

      document.getElementById('temperature').innerText = `${temp}Â°C`;
      document.getElementById('description').innerText = desc.charAt(0).toUpperCase() + desc.slice(1);
      document.getElementById('weather-icon').innerHTML = `<img src="${iconUrl}" alt="${desc}" />`;
    }

    function getIconUrl(iconCode) {
      const baseUrl = 'https://openweathermap.org/img/wn/';
      return `${baseUrl}${iconCode}@2x.png`;
    }

    function updateTime() {
      const localTimeElement = document.getElementById('local-time');
      setInterval(() => {
        const now = new Date();
        const utcOffset = now.getTimezoneOffset() * 60000;
        const istOffset = 5.5 * 60 * 60 * 1000; // IST is UTC+5:30
        const istTime = new Date(now.getTime() + utcOffset + istOffset);
        localTimeElement.innerText = `Local Time: ${istTime.toLocaleTimeString()}`;
      }, 1000);
    }

    getWeather();
  </script>
</body>
</html>
